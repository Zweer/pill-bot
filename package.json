{
  "name": "pill-bot",
  "version": "0.1.0",
  "bin": {
    "pill-bot": "bin/pill-bot.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^42.0.2",
    "@shopify/prettier-config": "^1.1.2",
    "@types/jest": "^29.2.4",
    "@types/node": "18.11.15",
    "aws-cdk": "2.57.0",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.4"
  },
  "dependencies": {
    "aws-cdk-lib": "2.57.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  },
  "prettier": "@shopify/prettier-config",
  "eslintConfig": {
    "extends": [
      "plugin:@shopify/node",
      "plugin:@shopify/typescript",
      "plugin:@shopify/typescript-type-checking",
      "plugin:@shopify/prettier"
    ],
    "parserOptions": {
      "project": "tsconfig.json"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/test"],
    "testMatch": ["**/*.test.ts"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
